<section>

  <div class="container mt-4">
    <div class="row" style="margin-top:80px;">
      <div class="col-md-6 grid-margin stretch-card">
        <h2 class="text-center">Add Product</h2>
        <form action="/admin/add-product" enctype="multipart/form-data" method="post">


          <label for="">Category</label>
          <select class="form-select" name="Category" aria-label="Default select example">
            {{!-- <option selected>select from the option</option> --}}
            {{#each category}}
            <option value="{{this.Category}}">{{this.Category}}</option>
            {{/each}}
            {{!-- <option value="2">Earrings</option>
            <option value="3">Neckpiece</option> --}}
          </select>
          <br>
          <label for="">Name</label>
          <input type="text" name="Name" class="form-control">

          <label for="">Description</label>
          <input type="textarea" style="width:400px; height:150px" name="Description" class="form-control">

          <label for="">Price</label>
          <input type="text" name="Price" class="form-control">

          
          <label for="">Image</label>
          <img src="/product-images/{{product.Image.[0]}}" alt="" style="width:100px;height:auto" id="imgView"
            class="pt-3">
          <img src="/product-images/{{product.Image.[1]}}" alt="" style="width:100px;height:auto" id="imgView"
            class="pt-3">
          <img src="/product-images/{{product.Image.[2]}}" alt="" style="width:100px;height:auto" id="imgView"
            class="pt-3">

          <input type="file" class="form-control" name="Image" multiple>



          <button type="submit" class="btn btn-success mt-4">Submit</button>
        </form>
      </div>

    </div>
  </div>


</section>


