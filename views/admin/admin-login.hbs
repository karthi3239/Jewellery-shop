                <h3 class="card-title text-left mb-3">Admin Login</h3>
                 {{#if loginErr}}
             <p class="error">{{loginErr}}</p>
             {{/if}}
                <form action="/admin/admin-login" method="post">
            
                <div class="form-group">
                    <label>Email Address</label>
                    <input type="email" class="form-control" onkeyup="validEmail()" name="Email" id="Email" placeholder="Enter email">
