<section>
    <div class="container"style="margin-top:65px">
       <table class="table" style="margin-top:65px" id="table_id">
  <thead>
    <tr>
      <th scope="col">No</th>
      <th scope="col">Offer</th>
      {{!-- <th scope="col">Description</th>
      <th scope="col">Price</th> --}}
      <th scope="col">Discount</th>
      <th scope="col">Options</th>
    </tr>
  </thead>
  <tbody>
    {{#each offer}}
    <tr>
      <th scope="row">{{inc @index}}</th>
      <td>{{this.offername}}</td>
     <td>{{this.discount}}</td>
       <td>
        <a href="/admin/edit-offer/{{this._id}}" class="btn btn-primary">Edit</a>
        <a href="/admin/delete-offer/{{this._id}}" class="btn btn-danger" onclick="return confirm('Are you want to delete {{this.Name}}')">Delete</a>
       </td>
    </tr>
    {{/each}}
  </tbody>
</table>
    </div>
</section>

